@page
@model Abby.Web.Pages.Customer.Cart.PaymentModel

<form method="post">
    <input asp-for="@Model.OrderHeader.Id" hidden />
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 ">
                    <div class="row">
                        <div class="col-6 pt-2">
                            <h3 class="text-white-50">Bank payment gateway (It is fake.)</h3>
                        </div>
                        <div class="col-6 text-end">
                            <a asp-page="Index" class="btn btn-outline-info btn-sm">Back to shopping cart</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-5 offset-lg-1">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Order Summary:</span>
                                </h4>
                                <ul class="list-group mb-3">
                                    @foreach (var detail in Model.OrderDetails)
                                    {
                                        <li class="list-group-item d-flex justify-content-between">
                                            <div>
                                                <h6 class="my-0">@detail.MenuItemName</h6>
                                                <small class="text-muted">Quantity: @detail.Count</small>
                                            </div>
                                            <span class="text-muted">$@(detail.MenuItemPrice * @detail.Count)</span>
                                        </li>
                                    }
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <small class="text-info">Total (USD)</small>
                                        <strong class="text-info">$@Model.OrderHeader.OrderTotalPrice.ToString("0.00")</strong>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-12 col-lg-6 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Credit Card Information</span>
                                    </h4>
                                </div>

                                <div class="row my-1">
                                    <div class="col-2">
                                        <label>CardId</label>
                                    </div>
                                    <div class="col-10">
                                        <input value="5859-5859-5859-5859" disabled class="form-control" />
                                    </div>
                                </div>

                                <div class="row my-1">
                                    <div class="col-2">
                                        <label>CV2</label>
                                    </div>
                                    <div class="col-10">
                                        <input value="1212" disabled class="form-control" />
                                    </div>
                                </div>

                                <div class="row my-1">
                                    <div class="col-2">
                                        <label>Expire Date</label>
                                    </div>
                                    <div class="col-10">
                                        <input value="12/20/2026" disabled class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-4 offset-md-8">
                            <div class="w-75 btn-group" role="group">
                                <button asp-page-handler="Pay" type="submit" value="Pay" class="btn btn-success form-control mx-2">Pay</button>
                                <button asp-page-handler="Cancel" type="submit" value="Cancel" class="btn btn-danger form-control mx-2">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}