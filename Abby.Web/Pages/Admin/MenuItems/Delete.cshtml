@page
@model Abby.Web.Pages.Admin.MenuItems.DeleteModel

<form method="post">
    <input asp-for="@Model.MenuItem.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="col-9">
                <h2 class="text-primary pl-3">Delete Food Type</h2>
                <hr />
                <div class="mb-3">
                    <label asp-for="@Model.MenuItem.Name"></label>
                    <input asp-for="@Model.MenuItem.Name" class="form-control" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.MenuItem.Description"></label>
                    <input asp-for="@Model.MenuItem.Description" class="form-control" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.MenuItem.Price"></label>
                    <input asp-for="@Model.MenuItem.Price" class="form-control" disabled />
                </div>

                <div class="mb-3">
                    <label>Caterogy</label>
                    <input asp-for="@Model.MenuItem.Category.Name" class="form-control" disabled />
                </div>

                <div class="mb-3">
                    <label>Food Type</label>
                    <input asp-for="@Model.MenuItem.FoodType.Name" class="form-control" disabled />
                </div>
            </div>
            <div class="col-3">
                <img src="@Model.MenuItem.ImageUrl" width="100%" class="border-radius:5px;border:1px solid #bbb9b9;" />
            </div>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>
